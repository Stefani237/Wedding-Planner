<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/DP150"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Invalid message returned"
        android:textSize="@dimen/DP20"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dialog_btn"
        android:layout_marginTop="@dimen/DP20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receiver_details"
            android:text=""
            android:textSize="@dimen/DP16"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/receiver_error_msg_text"
            android:text=" returned a wrong message."
            android:textSize="@dimen/DP16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP70"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:visibility="invisible"
            android:text="Cancel"
            android:layout_weight="1"
            android:id="@+id/wedding_details_negative_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:text="Ok"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@color/white"
            android:id="@+id/error_msg_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>